{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "prisma/generated/**/*.ts",
    "prisma/generated/**/*.d.ts"
  ]
}
